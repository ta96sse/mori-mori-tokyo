---
import type { Member } from "../types";

interface Props {
    member: Member;
    index: number;
}

const { member, index } = Astro.props;
---

<div
    class="tilt-card group relative h-full min-w-[85vw] md:min-w-0 snap-center reveal"
    data-tilt
    data-delay={index * 100}
>
    <div
        class="absolute inset-0 bg-gradient-to-br from-ivy to-ivyLight rounded-3xl blur opacity-20 group-hover:opacity-40 transition-opacity duration-500"
    >
    </div>
    <div
        class="relative h-full bg-[#0a0a0a] border border-white/20 rounded-3xl p-8 flex flex-col overflow-hidden"
    >
        <!-- Jersey Number -->
        <div class="absolute top-2 right-8 opacity-20">
            <span
                class="font-display font-black text-6xl text-white italic tracking-tighter"
                >{member.number}</span
            >
        </div>

        <div class="mb-6">
            <span
                class="text-xs font-bold uppercase tracking-[0.2em] text-ivyLight mb-2 block"
                >{member.role}</span
            >
            <div class="flex items-center gap-3">
                <h3
                    class="font-display font-black text-3xl uppercase italic tracking-tighter"
                >
                    {member.name}
                </h3>
                {
                    member.instagram && (
                        <a
                            href={member.instagram}
                            target="_blank"
                            rel="noopener"
                            class="text-gray-600 hover:text-ivyLight transition-colors"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                            </svg>
                        </a>
                    )
                }
                {
                    member.strava && (
                        <a
                            href={member.strava}
                            target="_blank"
                            rel="noopener"
                            class="text-gray-600 hover:text-[#fc4c02] transition-colors"
                        >
                            <svg
                                class="w-5 h-5"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                                role="img"
                                xmlns="http://www.w3.org/2000/svg"
                            >
                                <title>Strava icon</title>
                                <path d="M15.387 17.944l-2.089-4.116h-3.065L15.387 24l5.15-10.172h-3.066m-7.008-5.599l2.836 5.598h4.172L10.463 0l-7 13.828h4.169" />
                            </svg>
                        </a>
                    )
                }
            </div>
        </div>

        <div class="mb-6 flex-grow min-h-[3.25rem]">
            <p
                class="text-sm text-gray-300 leading-relaxed border-l-2 border-white/20 pl-4"
            >
                {member.desc}
            </p>
        </div>

        <div class="border-t border-white/5">
            <div class="flex justify-between items-center text-xs">
                <span class="text-gray-400 uppercase tracking-wider"
                    >Background</span
                >
                <span class="font-bold text-white">{member.background}</span>
            </div>
        </div>
    </div>
</div>
